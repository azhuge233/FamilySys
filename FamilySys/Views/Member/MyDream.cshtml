@using Microsoft.AspNetCore.Server.Kestrel.Core.Internal.Http
@model FamilySys.Models.ViewModels.MemberViewModel.MemberDreamViewModel
@{
    ViewData["Title"] = "家庭成员";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}


<div align="center">
	<h2>我的家庭梦想</h2>
	@using (Html.BeginForm("UploadDream", "Member", HttpMethod.Post)) {
		<table class="table" style="margin: auto; text-align: center; width: auto">
			<tr style="display: none">
				<td>@Html.TextBoxFor(Model => Model.ID)</td>
			</tr>
			<tr>
				<td>
					@Html.LabelFor(Model => Model.Title)
				</td>
				<td>
					@Html.TextBoxFor(Model => Model.Title, new { @class="form-control", @placeholder="梦想标题"})
				</td>
				<td>
					@Html.ValidationMessageFor(Model => Model.Title)
				</td>
			</tr>
			<tr>
				<td>
					@Html.LabelFor(Model => Model.Content)
				</td>
				<td>
					@Html.TextAreaFor(Model => Model.Content, new { @class = "form-control", @rows="5", @placeholder = "梦想标题", @style = "width: 600px" })
				</td>
				<td>
					@Html.ValidationMessageFor(Model => Model.Content)
				</td>
			</tr>
		</table>
		<div>
			<input type="submit" onclick="return ensure()" name="SubBtn" class="btn btn-success"/>
		</div>
	}
</div>
<br/>
<div class="text-right">
	<a asp-action="Index" asp-controller="Member">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> 返回主页
	</a>
</div>

