@model FamilySys.Models.ViewModels.MemberIndexViewModel
@{
	ViewData["Title"] = "家庭成员";
	Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active">
		</li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
	</ol>

	<div class="carousel-inner" role="listbox">

		<div class="item active">
			<img src="~/images/Hello.png" alt="Hello" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p>
					你好，@ViewBag.Username
				</p>
				<p style="font-size: small; height: 9px">
					Photo by <a style="color: aliceblue" href="https://unsplash.com/photos/WHUDOzd5IYU?utm_source=unsplash&amp;utm_medium=referral&amp;utm_content=creditCopyText">Adam Solomon</a> on <a style="color: aliceblue" href="/search/photos/hello?utm_source=unsplash&amp;utm_medium=referral&amp;utm_content=creditCopyText">Unsplash</a>
				</p>
			</div>
		</div>
		<div class="item">
			<img src="~/images/FamilySys.png" alt="FamilySys" class="img-responsive" />
			<div class="carousel-caption" role="option">
				<p>
					易用、高效的家庭事务管理解决方案
				</p>
				<p style="font-size: small; height: 9px">
					Photo by <a style="color: aliceblue" href="https://unsplash.com/photos/cMOpU7Xg4Hc?utm_source=unsplash&amp;utm_medium=referral&amp;utm_content=creditCopyText">Fancycrave</a> on <a style="color: aliceblue" href="/?utm_source=unsplash&amp;utm_medium=referral&amp;utm_content=creditCopyText">Unsplash</a>
				</p>
			</div>
		</div>

	</div>

	<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
<h2 align="center">功能 - 家庭成员</h2>
<div class="row">
	<div class="col-md-6">
		<ul>
			<li>
				公告 - 查看公告
			</li>
			<li>
				家庭成员
				<ul>
					<li>
						成员信息 - 查看家庭成员信息
					</li>
					<li>
						得分记录 - 查看家庭成员得分记录
					</li>
					<li>
						月度排名 - 查看成员得分月度排名
					</li>
				</ul>
			</li>
			<li>
				家庭梦想
				<ul>
					<li>
						成员梦想 - 查看其他成员的家庭梦想并投票
					</li>
					<li>
						查看事务 - 设定、修改我的家庭梦想
					</li>
				</ul>
			</li>
		</ul>
	</div>

	<div class="col-md-6">
		<ul>
			<li>
				家庭事务
				<ul>
					<li>
						发布事务 - 发布新家庭事务
					</li>
					<li>
						查看事务 - 查看、接收家庭事务
					</li>
					<li>
						我的事务 - 查看已发布、接收的家庭事务，对已完成的事务评分
					</li>
				</ul>
			</li>
			<li>
				你好，[用户名] - 查看和修改个人信息、修改密码
			</li>
		</ul>
	</div>
</div>
