@using Microsoft.AspNetCore.Server.Kestrel.Core.Internal.Http
@model FamilySys.Models.ViewModels.AdminViewModel.AnnouncementViewModel
@{
    ViewData["Title"] = "管理员";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 align="center">发布公告</h2>
@using (Html.BeginForm("DoPublishAnnouncement", "Admin", HttpMethod.Post)) {
<table class="table" style="margin: auto; width: auto; text-align: center;">
	<tr>
		<td>
			@Html.LabelFor(Model => Model.Title)
		</td>
		<td>
			@Html.TextBoxFor(Model => Model.Title, new { @class="form-control", @placeholder="标题" })
		</td>
		<td>
			@Html.ValidationMessageFor(Model => Model.Title)
		</td>
	</tr>
	<tr>
		<td>
			@Html.LabelFor(Model => Model.Content)
		</td>
		<td>
			@Html.TextAreaFor(Model => Model.Content, new { @class = "form-control", @placeholder = "内容", @style="height: 150px;width: 600px" })
		</td>
		<td>
			@Html.ValidationMessageFor(Model => Model.Content)
		</td>
	</tr>
</table>
<div align="center">
	<input type="submit" onclick="return ensure()" name="SubBtn" class="btn btn-success"/>
</div>
}

