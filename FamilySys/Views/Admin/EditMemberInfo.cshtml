@using Microsoft.AspNetCore.Server.Kestrel.Core.Internal.Http
@model FamilySys.Models.ViewModels.AdminViewModel.AdminEditMemberViewModel
@{
    ViewData["Title"] = "管理员";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 align="center">管理信息</h2>
@using (Html.BeginForm("DoEditMemberInfo", "Admin", HttpMethod.Post)) {
	<table class="table" style="text-align: center; margin: auto; width: auto">
		<tr>
			<td>@Html.LabelFor(Model => Model.ID)</td>
			<td>@Html.TextBoxFor(Model => Model.ID, new {@class = "form-control", @readonly = true, @style = "width: 110px"})</td>
		</tr>
		<tr>
			<td>
				@Html.LabelFor(Model => Model.Username, new {@style = "width:90"})
			</td>
			<td>
				@Html.TextBoxFor(Model => Model.Username, new {@class = "form-control", @placeholder = "用户名", @style = "width: 200px"})
			</td>
			<td>
				@Html.ValidationMessageFor(Model => Model.Username)
			</td>
		</tr>
		<tr>
			<td>
				@Html.LabelFor(Model => Model.Password)
			</td>
			<td>
				@Html.TextBoxFor(Model => Model.Password, new {@class = "form-control", @type = "password", @placeholder = "密码", @style = "width: 200px"})
			</td>
			<td>
				@Html.ValidationMessageFor(Model => Model.Password)
			</td>
		</tr>
		<tr>
			<td>
				@Html.LabelFor(Model => Model.Sex)
			</td>
			<td>
				@Html.DropDownListFor(Model => Model.Sex, @Model.SexList, "选择性别", new {@class = "form-control", @style = "width: auto"})
			</td>
			<td>
				@Html.ValidationMessageFor(Model => Model.Sex)
			</td>
		</tr>
		<tr>
			<td>
				@Html.LabelFor(Model => Model.Phone)
			</td>
			<td>
				@Html.TextBoxFor(Model => Model.Phone, new {@class = "form-control", @placeholder = "电话", @style = "width: 200px"})
			</td>
			<td>
				@Html.ValidationMessageFor(Model => Model.Phone)
			</td>
		</tr>
		<tr>
			<td>
				@Html.LabelFor(Model => Model.Mail)
			</td>
			<td>
				@Html.TextBoxFor(Model => Model.Mail, new {@class = "form-control", @placeholder = "邮箱", @style = "width: 200px"})
			</td>
			<td>
				@Html.ValidationMessageFor(Model => Model.Mail)
			</td>
		</tr>
		<tr>
			<td>
				@Html.LabelFor(Model => Model.Score)
			</td>
			<td>
				@Html.TextBoxFor(Model => Model.Score, new {@class = "form-control", @placeholder = "邮箱", @style = "width: 80px"})
			</td>
			<td>
				@Html.ValidationMessageFor(Model => Model.Score)
			</td>
		</tr>
	</table>
	<div align="center">
		<input type="submit" name="SubBtn" onclick="return ensure()" class="btn btn-success"/>
	</div>
}
